.kc-calendar
  .kc-event
    >div
      background-color #b2b2f8
      border-radius 5px
      padding 5px
      font-size 10px
      cursor pointer
      position absolute
      top 2px
      bottom 2px
      left 2px
      right 2px


      &.chosen
        padding 2px
        border 3px solid blue

    &.kc-conflicted
      >div
        background-color red

.course-details
  height 150px

  .lbl
    display inline-block
    width 100px
