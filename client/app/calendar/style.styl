.kc-calendar
  position relative
  display inline-block
  height 596px

  .kc-times
    position absolute
    top 20px

    >div
      width 640px

      &:nth-of-type(2n + 1)
        background-color #f1f1f1

  .kc-calendar-content
    position relative
    margin-left 60px
    height 100%

  .kc-events
    position absolute
    top 20px
    bottom 0
    left 0
    right 0


  .kc-days>div
    display inline-block
    padding 0 10px
    width calc(100% / 7)
    overflow hidden
    border-left 1px solid
    height 100%

    &:last-of-type
      border-right 1px solid

  .kc-event
    position absolute
